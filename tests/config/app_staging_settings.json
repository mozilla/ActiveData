{
	"use": "elasticsearch",
	"testing":{
		"query": "http://127.0.0.1:5000/query",
		"sql": "http://127.0.0.1:5000/sql"
	},
	"flask": {
		"host": "0.0.0.0",
		"port": 5000,
		"debug": false,
		"threaded": true,
		"processes": 1,
		"ssl_context": "adhoc",
		"allow_exit": true
	},
	"constants": {
		"pyLibrary.env.http.default_headers": {
			"Referer": "https://wiki.mozilla.org/Auto-tools/Projects/ActiveData"
		},
		"pyLibrary.env.big_data.MAX_STRING_SIZE": 100000000,
		"jx_elasticsearch.meta.ENABLE_META_SCAN": false,
		"jx_elasticsearch.meta.DEBUG": true,
		"jx_elasticsearch.es52.set_op.DEBUG": true,
		"jx_elasticsearch.es52.agg_op.DEBUG": true
	},
	"bulk": {
		"s3": {
			"bucket": "active-data-query-results",
			"public": true,
			"$ref": "file://~/private.json#aws_credentials"
		}
	},
	"request_logs": {
		"host": "http://localhost",
		"port": 9201,
		"index": "activedata-requests",
		"type": "request_log",
		"typed": false,
		"read_only": false,
		"refresh_interval": "1second",
		"schema": {
			"$ref": "//.../resources/schema/request_log.schema.json"
		}
	},
	"saved_queries": {
		"host": "http://localhost",
		"port": 9200,
		"index": "saved_queries",
		"type": "query",
		"debug": true
	},
	"elasticsearch": {
		"host": "http://localhost",
		"port": 9201,
		"index": "testdata",
		"type": "test_result",
		"debug": true
	},
	"debug": {
		"trace": true,
		"cprofile": {
			"enabled": false,
			"filename": "./results/profile.tab"
		},
		"log": [
			{
				"log_type": "console"
			},
			{
				"log_type": "elasticsearch",
				"host": "http://localhost",
				"port": 9201,
				"index": "debug-activedata",
				"type": "activedata",
				"rollover": {
					"interval": "3month",
					"max":"year"
				}
			}
		]
	}
}
